{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "esilean",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon ./src/server.js",
    "start": "cross-env NODE_ENV=production node ./src/server.js",
    "watch-test": "cross-env NODE_ENV=test jest --watch",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --detectOpenHandles",
    "pretest": "cross-env NODE_ENV=test node ./src/database/seeders/index.js",
    "coverage": "cross-env NODE_ENV=test yarn pretest && jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "celebrate": "^12.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.6",
    "sequelize": "^5.21.5",
    "sharp": "^0.25.2",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "coveralls": "^3.0.11",
    "jest": "^25.4.0",
    "nodemon": "^2.0.2",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  },
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}